{
  "name": "pharmacy-backend",
  "version": "1.0.0",
  "description": "Node.js Microservices for Pharmacy E-Commerce Platform",
  "private": true,
  "workspaces": [
    "user-service",
    "product-service",
    "order-service",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:user\" \"npm run dev:product\" \"npm run dev:order\"",
    "dev:user": "cd user-service && npm run dev",
    "dev:product": "cd product-service && npm run dev",
    "dev:order": "cd order-service && npm run dev",
    "build": "npm run build:user && npm run build:product && npm run build:order",
    "build:user": "cd user-service && npm run build",
    "build:product": "cd product-service && npm run build",
    "build:order": "cd order-service && npm run build",
    "test": "npm run test:user && npm run test:product && npm run test:order",
    "test:user": "cd user-service && npm test",
    "test:product": "cd product-service && npm test",
    "test:order": "cd order-service && npm test",
    "lint": "npm run lint:user && npm run lint:product && npm run lint:order",
    "lint:user": "cd user-service && npm run lint",
    "lint:product": "cd product-service && npm run lint",
    "lint:order": "cd order-service && npm run lint",
    "install:all": "npm install && npm run install:user && npm run install:product && npm run install:order",
    "install:user": "cd user-service && npm install",
    "install:product": "cd product-service && npm install",
    "install:order": "cd order-service && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "apollo-server-express": "^3.12.1",
    "graphql": "^16.8.1",
    "socket.io": "^4.7.4",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "microservices",
    "mongodb",
    "graphql",
    "pharmacy",
    "ecommerce"
  ],
  "author": "Pharmacy E-Commerce Team",
  "license": "MIT"
} 